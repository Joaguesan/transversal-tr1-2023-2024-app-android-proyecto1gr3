<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity"
    android:padding="150px">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tituloPerfil"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:paddingTop="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perfilNombre"
            android:textStyle="bold"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="nombre"
            android:textSize="20dp" />

        <TextView
            android:paddingTop="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perfilApellido"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/tvApellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="apellido"
            android:textSize="20dp" />
        <TextView
            android:paddingTop="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perfilCorreo"
            android:textStyle="bold"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/tvCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="correo"
            android:textSize="20dp" />
        <TextView
            android:paddingTop="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perfilDireccion"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/tvDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="direccion"
            android:textSize="20dp" />

        <TextView
            android:paddingTop="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perfilTelefono"
            android:textStyle="bold"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/tvTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="telefono"
            android:textSize="20dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>